@model ParkingLot.Models.ParkingSpot
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #0f0f0f;
        color: #e4f8ff;
        font-family: 'Segoe UI', sans-serif;
    }

    .header {
        text-align: center;
        margin-top: 3rem;
        margin-bottom: 2rem;
    }

        .header h2 {
            font-size: 2.4rem;
            font-weight: bold;
            color: #00c0ff;
            text-shadow: 0 0 10px rgba(0, 192, 255, 0.4);
        }

    .status-box {
        background-color: #1b1b1b;
        border: 1px solid #333;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 192, 255, 0.1);
        padding: 1rem;
        max-width: 500px;
        margin: 0 auto;
    }

        .status-box table {
            width: 100%;
            color: #e4f8ff;
        }

        .status-box th {
            text-align: left;
            padding: 0.6rem;
            color: #00c0ff;
            font-weight: 600;
            border-bottom: 1px solid #444;
        }

        .status-box td {
            padding: 0.6rem;
            border-bottom: 1px solid #333;
        }

    .note {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.95rem;
        color: #888;
    }
</style>

<div class="header">
    <h2><i class="bi bi-grid-3x3-gap-fill me-2"></i>Statusi i Vendparkimeve</h2>
    <p class="text-secondary">Gjendja aktuale e vendeve në dispozicion</p>
</div>

<div class="status-box">
    <table>
        <tr><th>Total vendparkime</th><td>@Model.TotalSpots</td></tr>
        <tr><th>Vendet të rezervuara</th><td>@ViewBag.ReservedSpots</td></tr>
        <tr><th>Vendet të lira</th><td>@ViewBag.FreeSpots</td></tr>
    </table>
</div>

<div class="note">
    <i class="bi bi-info-circle me-1"></i>
    Të dhënat ndryshojnë automatikisht kur regjistrohet abonim aktiv
</div>