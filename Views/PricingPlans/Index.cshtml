@model IEnumerable<ParkingLot.Models.PricingPlan>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #0d0d0d;
        color: #cceeff;
        font-family: 'Segoe UI', sans-serif;
        padding: 2rem;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #5fbad6;
        margin-top: 2rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid #222;
        padding-bottom: 0.5rem;
    }

    .custom-table {
        width: 90%;
        margin: auto;
        background-color: #121212;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
    }

        .custom-table th, .custom-table td {
            padding: 0.8rem;
            text-align: center;
        }

        .custom-table th {
            background-color: #1a1a1a;
            color: #5fbad6;
            font-weight: 500;
        }

        .custom-table td {
            background-color: #181818;
            color: #e2f6ff;
        }

        .custom-table tr:nth-child(even) td {
            background-color: #151515;
        }

        .custom-table tr:hover td {
            background-color: #242424;
        }
</style>

<div class="section-title">E hënë – E premte</div>
<table class="custom-table">
    <thead>
        <tr>
            <th>Ditët</th>
            <th>Tarifa për orë</th>
            <th>Tarifa ditore</th>
            <th>Orë minimale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plan in Model.Where(p => p.Type.ToLower() == "weekday"))
        {
            <tr>
                <td>E hënë – E premte</td>
                <td>€@plan.HourlyRate</td>
                <td>€@plan.DailyRate</td>
                <td>@plan.MinimumHours orë</td>
            </tr>
        }
    </tbody>
</table>

<div class="section-title">E shtunë – E diel</div>
<table class="custom-table">
    <thead>
        <tr>
            <th>Ditët</th>
            <th>Tarifa për orë</th>
            <th>Tarifa ditore</th>
            <th>Orë minimale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plan in Model.Where(p => p.Type.ToLower() == "weekend"))
        {
            <tr>
                <td>E shtunë – E diel</td>
                <td>€@plan.HourlyRate</td>
                <td>€@plan.DailyRate</td>
                <td>@plan.MinimumHours orë</td>
            </tr>
        }
    </tbody>
</table>