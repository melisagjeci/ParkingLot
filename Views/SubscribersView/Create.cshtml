@model Subscriber
@Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #0c0c0c;
        font-family: 'Segoe UI', sans-serif;
        color: #b3ecff;
    }

    .form-container {
        background-color: #141414;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(0, 191, 255, 0.15);
        margin-top: 40px;
    }

    h2 {
        text-align: center;
        font-size: 2rem;
        color: #00bfff;
        text-shadow: 0 0 10px rgba(0, 191, 255, 0.4);
        margin-bottom: 30px;
    }

    .form-label {
        color: #b3ecff;
    }

    .form-control {
        background-color: #1b1b1b;
        border: 1px solid #00bfff;
        color: #b3ecff;
    }

        .form-control:focus {
            border-color: #00e6ff;
            box-shadow: 0 0 5px rgba(0, 191, 255, 0.6);
        }

    .btn-info {
        background-color: #00bfff;
        border: none;
    }

        .btn-info:hover {
            background-color: #00e6ff;
        }
</style>

<div class="container form-container">
    <h2><i class="bi bi-person-plus-fill me-2"></i> Shto Abonent të Ri</h2>

    <div class="text-end mb-3">
        <a asp-controller="SubscribersView" asp-action="Create" class="btn btn-outline-info">
            <i class="bi bi-person-lines-fill me-1"></i> Menaxho Abonentët
        </a>
    </div>

    <form asp-controller="SubscribersView" asp-action="Create" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label">Emri</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label">Mbiemri</label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IdCardNumber" class="form-label">Nr. Karte</label>
                <input asp-for="IdCardNumber" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="PlateNumber" class="form-label">Targa</label>
                <input asp-for="PlateNumber" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Birthday" class="form-label">Datëlindja</label>
            <input asp-for="Birthday" type="date" class="form-control" />
        </div>

        <button type="submit" class="btn btn-info">
            <i class="bi bi-save-fill me-1"></i> Ruaj
        </button>
    </form>
</div>